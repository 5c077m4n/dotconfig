#!/usr/bin/env zsh

if (( $+commands[brew] )); then
	brew update
	brew upgrade
	brew upgrade --cask
elif (( $+commands[pacman] )); then
	sudo pacman -Syu
elif (( $+commands[pkg] )); then
	pkg update
	pkg upgrade
elif (( $+commands[apk] )); then
	sudo apk update
	sudo apk upgrade
elif (( $+commands[apt] )); then
	sudo apt update
	sudo apt upgrade
fi

nvim --headless +"Lazy! sync" +qa
if (( $+commands[rustup] )); then rustup upgrade; fi
